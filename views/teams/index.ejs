<%- include('../partials/boilerplate.ejs') %>

<div class="teams-wrapper">
    <a href="/teams/new" class="buttonlike">Add a team</a>
    <% teams.forEach(team => { %>
    <div class="team">
        <div class="name-status">
            <h3><%= team.name %></h3>
        </div>
        <div class="win-actions">
            <h5><%= team.win %></h5>
            <div class="win-actions">Win action goes here!</div>
        </div>
        <div class="loss-actions">
            <h5><%= team.loss %></h5>
            <div class="loss-actions">Loss action goes here</div>    
        </div>
    </div>
<% }) %>
   
</div>

<%- include('../partials/end.ejs') %>